.sidebar
  width 24%
  @media screen and (max-width: 1200px)
    width 90%
    padding 0 5%
  .widget
    width 100%
    background-color color-white
    margin-top default-distance
    -webkit-box-shadow: 1px 2px 3px #ddd;
    box-shadow: 1px 2px 3px #ddd;
    @media screen and (max-width: 1200px)
      width 100%
      float none
    .widget-title
      height 50px
      line-height 50px
      padding-left 20px
      font-size 14px
      background-color color-background
    .widget-content
      padding:10px
      li
        margin:10px
        a
          color #9C9C9C
        a:hover
          color #9C9C9C - 50%

  .github
    .github-headerlogo
      padding-top 5px
      padding 12%
      img
        display block
        margin 0 auto
    .github-name
      padding:5px 10px
      font-weight bold
    .github-login
      padding 5px 10px
      font-size 16px
      padding-bottom 15px
      border-bottom:1px solid #cccccc
      a
        display block
        text-align center
        border-radius 5px
        padding:5px 20px
        color #FFFFFF
        background-color #646262
        border 1px solid #cccccc
      a:hover
        background-color #646262 - 50%
    .github-email
      padding 5px 10px
      font-size 14px
      color #4864C5
      margin-top 5px
    .github-create
      padding 5px 10px
      font-size 14px
      padding-bottom 15px
      margin-top 5px
      border-bottom:1px solid #cccccc
    .github-mainblo
      width 33%
      border-right 1px solid #cccccc
      text-align center
      @media screen and (max-width: 1200px)
        width 33%
      .github-mainblo-number
        font-size 30px
        color #4183c4
        font-weight bold
      .github-mainblo-title
        color:#9c9c9c
    .github-mainblo:nth-child(3)
      border-right 0px

  .tagcloud
    .widget-content
      a
        display inline-block
        margin:5px
        padding:3px 5px
        background-color #4864c5
        color:color-white
