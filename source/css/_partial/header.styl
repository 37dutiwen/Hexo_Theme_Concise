//header
.header
  width 100%
  height 60px
  background-color #646262
  .header-content
    width page-width
    margin 0 auto
  .header-logo
    min-width 300px
    font-size 32px
    a
      color:color-white;
      line-height 60px

  .header-nav
    min-width 500px
    li
      display inline-block
      font-size 20px
      line-height 60px
      margin-left 50px
      a
        color:color-white
      a:hover
        color:#888 + 50%

  .header-search
    max-width 300px
    input
      width 250px
      height 40px
      border:none
      margin-top 10px
      color:#FFFFFF
      font-size 16px
      background-color #767676
    input:foucus
      outline none
