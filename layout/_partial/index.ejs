<article class="<%= item.layout %>">
  <div class="post-block">
    <header>
      <%- partial('post/title') %>
      <% if (item.layout != 'page'){ %>
      <time datetime="<%= item.date.toDate().toUTCString() %>" class="post-time">
        <a href="<%- config.root %><%- item.path %>"><%= item.date.format(config.date_format) %></a>
      </time>
      <% } %>
    </header>
    <div class="post-entry">
      <% if (item.excerpt && index){ %>
        <%- item.excerpt %>
      <div class="read-more">
        <a href="<%- config.root %><%- item.path %>#more">
          <%= theme.excerpt_link %>
        </a>
      </div>
      <% } else { %>
        <%- item.content%>
      <% } %>
    </div>
    <footer>
      <% if (index){ %>
        <%- partial('post/category') %>
        <%- partial('post/tag') %>
        <div class="post-comment alignright">
          <% if (!item.comment){ %>
          <a href="<%- config.root %><%- item.path %>" class="ds-thread-count comment-link alignright" data-thread-key="<%- item.path %>" data-count-type="comments"></a>
          <% } %>
        </div>
        <%- partial('post/share') %>
      <% } %>
      <div class="clearfix"></div>
    </footer>
  </div>
</article>
