<article class="<%= item.layout %>">
  <div class="post-block">
    <header>
      <%- partial('post/title') %>
      <% if (item.layout != 'page'){ %>
      <time datetime="<%= item.date.toDate().toUTCString() %>" class="post-time">
        <a href="<%- config.root %><%- item.path %>"><%= item.date.format(config.date_format) %></a>
      </time>
      <% } %>
    </header>
    <div class="post-entry">
      <% if (item.excerpt && index){ %>
        <%- item.excerpt %>
      <div class="read-more">
        <a href="<%- config.root %><%- item.path %>#more">
          <%= theme.excerpt_link %>
        </a>
      </div>
      <% } else { %>
        <%- item.content%>
      <% } %>
    </div>
    <footer>
      <% if (index){ %>
        <% if (!item.comment){ %>
        <div class="alignright">
          <a href="<%- item.permalink %>#disqus_thread" class="comment-link">0条评论</a>
        </div>
        <% } %>
      <% } else { %>
        <div class="alignright">
          <a href="<%- item.permalink %>#disqus_thread" class="comment-link">1条评论</a>
        </div>
      <% } %>
      <div class="clearfix"></div>
    </footer>
  </div>
</article>
